<h1>Listing plays</h1>

<table>
  <thead>
    <tr>
      <th>Turn player</th>
      <th>Turn number</th>
      <th>End flag</th>
      <th>Room no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.turn_player %></td>
        <td><%= play.turn_number %></td>
        <td><%= play.end_flag %></td>
        <td><%= play.room_no %></td>
        <td><%= link_to 'Show', play %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
        <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

